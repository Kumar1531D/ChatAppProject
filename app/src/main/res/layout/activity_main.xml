<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/new_name_background"
    tools:context=".MainActivity">

    <!-- Toolbar (White Background) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/PopupMenuStyle"
        app:title="Chat App"
        app:titleTextColor="@color/black"
        android:elevation="4dp" />


    <!-- RecyclerView for Friends & Groups (No Extra Margin) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:listitem="@layout/friend_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:listitem="@layout/group_item" />

</LinearLayout>
