<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Received Message (Left) -->
    <LinearLayout
        android:id="@+id/leftMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_left_with_shadow"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="80dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/leftMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Received Message"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="8dp"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>

    <!-- Sent Message (Right) -->
    <LinearLayout
        android:id="@+id/rightMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_right_with_shadow"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="80dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/rightMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Sent Message"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
